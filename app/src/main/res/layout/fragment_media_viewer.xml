<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mediaViewerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.viewer.MediaViewerFragment">

    <!-- ViewPager2: 用于滑动查看多个媒体 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/media_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 媒体容器（供内部 fragment 使用），比如 ImageView 或 PlayerView 等 -->
    <FrameLayout
        android:id="@+id/mediaContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 加载指示器 -->
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- 底部工具栏 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#AA000000"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/action_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            android:background="@android:color/transparent"
            android:contentDescription="收藏" />

        <ImageButton
            android:id="@+id/action_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@android:color/transparent"
            android:contentDescription="标签" />

        <ImageButton
            android:id="@+id/action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            android:contentDescription="菜单" />

    </LinearLayout>
</FrameLayout>
